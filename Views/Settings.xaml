<Page
    x:Class="Wakey_Wakey.Views.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wakey_Wakey.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Margin="0,0,0,20" x:Uid="title_settings" FontSize="20" FontWeight="Light"/>
            <ComboBox x:Name="ComboBoxLanguage" x:Uid="title_language" HorizontalAlignment="Stretch">
                <x:String>English</x:String>
                <x:String>Polish</x:String>
            </ComboBox>
            <TextBlock Margin="0,20" x:Name="title_settingsinfo" x:Uid="title_savedsettings" Visibility="Collapsed" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Button Click="Button_Save_Click">
                <TextBlock x:Uid="title_savesettings"/>
            </Button>
        </Grid>
    </Grid>
</Page>
